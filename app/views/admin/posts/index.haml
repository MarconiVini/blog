%table.table.table-bordered
  %tr
    %th
      Title
    %th
      Body
    %th
      url
    %th
      edit
  - @posts.each do |post|
    %tr
      %td=post.title
      %td=post.body
      %td=post.friendly_url
      %td=link_to "editar", edit_admin_post_path(post), class: "btn btn-default"

=paginate @posts

